<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/cardview_default_radius"
    app:cardBackgroundColor="#FBFBFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/missingPetImage"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:background="#E2E2E2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/missingPetName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pet Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor" />

            <ImageButton
                android:id="@+id/editPostButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageButton
                android:id="@+id/deletePostButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <TextView
            android:id="@+id/missingPetDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brown Pug Dog"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/ownerDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daniel - 050550055"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/missingPetDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the missing pet..."
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/lostDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lost on: 07/02/2025"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
